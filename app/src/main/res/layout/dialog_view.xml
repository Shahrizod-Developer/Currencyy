<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="30dp"
    android:backgroundTint="#58E3D6"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="#47C2FA"
        android:layout_height="match_parent">

        <TextView

            android:id="@+id/nomi"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="nomi"
            android:layout_marginTop="5dp"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText

            android:id="@+id/et_enter"
            android:hint="Pul miqdorini kiriting"
            app:layout_constraintTop_toBottomOf="@id/nomi"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.05"
            android:textColor="#000"
            android:gravity="center"
            android:inputType="number"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button

            android:id="@+id/hisobla"
            app:layout_constraintTop_toBottomOf="@id/et_enter"
            app:layout_constraintVertical_bias="0.1"
            android:text="Hisoblash"
            android:textAllCaps="false"
            android:backgroundTint="@color/material_on_surface_disabled"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView

            android:id="@+id/card"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hisobla"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.3"
            android:layout_width="250dp"
            android:backgroundTint="#651BE8"
            app:cardCornerRadius="20dp"
            android:padding="10dp"
            android:layout_height="40dp">

            <TextView

                android:id="@+id/result"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_margin="1dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>

        <TextView

            app:layout_constraintTop_toBottomOf="@id/card"
            app:layout_constraintLeft_toLeftOf="@id/card"
            app:layout_constraintRight_toRightOf="@id/card"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="23sp"
            android:text="So'm"
            android:textStyle="bold"
            android:textColor="#fff"
            app:layout_constraintVertical_bias="0.7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>